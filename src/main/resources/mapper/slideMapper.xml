<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sast.evento.mapper.SlideMapper">

<update id="updateSlide">
    update slide
    <set>
        <if test="eventId != null">
            event_id = #{event_id},
        </if>
        <if test="url != null">
            url = #{url},
        </if>
        <if test="link != null">
            link = #{link},
        </if>
        <if test="title != null">
            title = #{title},
        </if>
    </set>
    where id = #{id}
</update>

</mapper>